---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="es">
    <title type="text">{{ site.title | escape }}</title>
    <subtitle type="html">{{ site.description | escape }}</subtitle>
    <link href="{{ site.url }}/feed.xml" rel="self"/>
    <link href="{{ site.url }}/"/>
    <id>{{ site.url }}/</id>
    <author>
        <name>{{ site.author | escape }}</name>
    </author>
    <updated>{{ site.time | date_to_xmlschema }}</updated>

    {% for post in site.posts limit:10 %}
    <entry>
        <title type="text">{{ post.title | escape }}</title>
        <link href="{{ site.url }}{{ post.url }}"/>
        <id>{{ site.url }}{{ post.id }}</id>
        <published>{{ post.date | date_to_xmlschema }}</published>
        <updated>{{ post.date | date_to_xmlschema }}</updated>

        {% if post.author %}
            <author><name>{{ post.author | escape }}</name></author>
        {% endif %}

        {% comment %} 
            *** CORRECCIÃ“N CLAVE: Usamos 'post.image' (la imagen grande) *** Asegura la URL completa con 'site.url' para el publicador de Python.
        {% endcomment %}
        {% if post.image %}
            <media:content xmlns:media="http://search.yahoo.com/mrss/"
                medium="image" 
                url="{{ site.url }}{{ site.baseurl }}{{ post.image }}"
            />
        {% endif %}

        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endfor %}
</feed>